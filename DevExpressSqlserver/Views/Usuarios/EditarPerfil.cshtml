@model DevExpressSqlserver.Models.Entities.Usuario
@using DevExtreme.AspNet.Mvc
@using DevExtreme.AspNet.Mvc.Builders

@{
    ViewData["Title"] = "Editar Perfil";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Editar Perfil</h4>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm("EditarPerfil", "Usuarios", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.UsuarioID)

                        @(Html.DevExtreme().Form()
                            .FormData(new
                            {
                                Model.UsuarioID,
                                Model.Identificacion,
                                Model.Nombre,
                                Model.Apellido,
                                Model.Login,
                                Model.Correo,
                                Model.Password,
                                Model.FechaNacimiento,
                                Model.Direccion,
                                Model.Telefono
                            })
                            .LabelLocation(FormLabelLocation.Top)
                            .MinColWidth(250)
                            .ColCount(2)
                            .Items(items =>
                            {
                                items.AddSimple().DataField(nameof(Model.Identificacion)).Label(l => l.Text("Identificación"));
                                items.AddSimple().DataField(nameof(Model.Nombre)).Label(l => l.Text("Nombre"));
                                items.AddSimple().DataField(nameof(Model.Apellido)).Label(l => l.Text("Apellido"));
                                items.AddSimple().DataField(nameof(Model.Login)).Label(l => l.Text("Usuario"));
                                items.AddSimple().DataField(nameof(Model.Correo)).Label(l => l.Text("Correo electrónico"));
                                items.AddSimple().DataField(nameof(Model.Password))
                                .Label(l => l.Text("Contraseña"))
                                .Editor(e => e.TextBox().Mode(TextBoxMode.Password));
                                items.AddSimple().DataField(nameof(Model.FechaNacimiento)).Label(l => l.Text("Fecha de nacimiento"));
                                items.AddSimple().DataField(nameof(Model.Direccion)).Label(l => l.Text("Dirección"));
                                items.AddSimple().DataField(nameof(Model.Telefono)).Label(l => l.Text("Teléfono"));
                            })
                            )

                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

