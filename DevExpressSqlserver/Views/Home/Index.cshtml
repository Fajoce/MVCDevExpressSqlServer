@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h3>Bienvenido, @User.Identity.Name</h3>
        <p>Usuario: @User.FindFirst("Login")?.Value</p>
        <p>Correo: @User.FindFirst("Correo")?.Value</p>

        <form asp-controller="Usuarios" asp-action="LogOut" method="post" class="mb-0">
            <button type="submit" class="btn btn-danger">Cerrar Sesión</button>
        </form>
    </div>

    <hr />

    <p class="lead">Esta es la página de inicio protegida.</p>
</div>

